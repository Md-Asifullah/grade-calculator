<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/corporateGreen"
        android:backgroundTint="@color/corporateGreen"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:text="Grade Calculator"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subject 1 Marks"
        android:layout_marginTop="10sp"
        android:layout_marginHorizontal="30sp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/deepBlue"/>

    <EditText
        android:id="@+id/subject1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30sp"
        android:layout_marginTop="10sp"
        android:background="@drawable/edittext_border"
        android:ems="10"
        android:hint="Enter marks (0-100)"
        android:inputType="number"
        android:text=""
        android:maxLength="3"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subject 2 Marks"
        android:layout_marginTop="10sp"
        android:layout_marginHorizontal="30sp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/deepBlue"/>

    <EditText
        android:id="@+id/subject2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text=""
        android:layout_marginHorizontal="30sp"
        android:layout_marginTop="10sp"
        android:hint="Enter marks (0-100)"
        android:background="@drawable/edittext_border"
        android:inputType="number"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subject 3 Marks"
        android:layout_marginTop="10sp"
        android:layout_marginHorizontal="30sp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/deepBlue"
        />

    <EditText
        android:id="@+id/subject3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:text=""
        android:layout_marginHorizontal="30sp"
        android:layout_marginTop="10sp"
        android:hint="Enter marks (0-100)"
        android:background="@drawable/edittext_border"/>

    <Button
        android:id="@+id/calculateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30sp"
        android:layout_marginTop="20sp"
        android:text="Calculate"
        android:textColor="@color/deepBlue"
        android:textSize="18sp"
        app:cornerRadius="5sp"
        android:background="@drawable/gradient_button"
        app:backgroundTint="@null"/>

    <Button
        android:id="@+id/resetButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30sp"
        android:layout_marginTop="20sp"
        android:text="Reset"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:cornerRadius="5sp"
        android:background="@color/grayBlue"
        app:backgroundTint="@null"/>

    <View

        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="20sp"
        android:background="?android:attr/listDivider"
        android:layout_marginHorizontal="30sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/bgColor"
        android:gravity="center_vertical"
        tools:context=".MainActivity">

        <TextView
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30sp"
            android:paddingVertical="10dp"
            android:text="Total Marks"
            android:textColor="@color/deepBlue"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/totalMarksObtained"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30sp"
            android:paddingVertical="10dp"
            android:text="0/300"
            android:textColor="@color/deepBlue"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider"
        android:layout_marginHorizontal="30sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/bgColor"
        android:gravity="center_vertical"
        tools:context=".MainActivity">

        <TextView
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30sp"
            android:paddingVertical="10dp"
            android:text="Average"
            android:textColor="@color/deepBlue"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/average"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30sp"
            android:paddingVertical="10dp"
            android:text="0"
            android:textColor="@color/deepBlue"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>
    <View

        android:layout_width="match_parent"
        android:layout_height="2dp"

        android:background="?android:attr/listDivider"
        android:layout_marginHorizontal="30sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/bgColor"
        android:gravity="center_vertical"
        tools:context=".MainActivity">

        <TextView
            android:layout_width="96dp"

            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30sp"
            android:paddingVertical="10dp"
            android:text="Grade"
            android:textColor="@color/deepBlue"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30sp"
            android:paddingVertical="5dp"
            android:text="F"
            android:textColor="@color/fGrade"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>
    <View

        android:layout_width="match_parent"
        android:layout_height="2dp"

        android:background="?android:attr/listDivider"
        android:layout_marginHorizontal="30sp"/>

</LinearLayout>